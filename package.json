{
  "name": "aurapos",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd client && npm start",
    "test:browser": "node tests/ui/browser-test.js",
    "test:login": "node tests/ui/login-working-test.js",
    "test:add-to-cart": "node tests/ui/add-to-cart-working.js",
    "test:all-ui": "npm run test:login && npm run test:add-to-cart",
    "test:clean": "taskkill /f /im chrome.exe 2>nul && taskkill /f /im chromedriver.exe 2>nul && timeout 2 && npm run test:all-ui",
    "test": "npm run test:all-ui"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "chromedriver": "^140.0.4",
    "jest": "^30.1.3",
    "jest-environment-node": "^30.1.2",
    "mocha": "^10.2.0",
    "selenium-webdriver": "^4.16.0",
    "webdriver-manager": "^12.1.9"
  }
}
